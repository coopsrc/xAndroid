<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    tools:context=".downloader.simple.SimpleDownloadActivity">


    <com.coopsrc.xandroid.widget.SegmentProgressBar
        android:id="@+id/segmentProgressBar"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:background="#EAEAEA"
        android:padding="4dp"
        app:dividerColor="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:percentTextAlign="end"
        app:progressColor="@android:color/darker_gray"
        app:segmentColor="@color/colorPrimary"
        app:segmentMode="fixed_count"
        app:textColor="@android:color/black"
        app:textSize="12sp" />

    <Button
        android:onClick="startDownload"
        android:id="@+id/button_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Start"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segmentProgressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>